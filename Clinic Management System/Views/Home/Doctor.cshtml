@model Clinic_Management_System.Models.Doctor
<style>
    body {
        background-image: url("/newfolder/3.webp");
    }
</style>
<html>
<head>
    <title>AddDoctor</title>
</head>
<body>
    <marquee Style="color:royalblue" direction="right"> Adding Doctor in clinic store</marquee>

    <boby style="background-size:initial" height="100px" ,Style="background-size:cover">

        @using (Html.BeginForm("addoc", "Home", FormMethod.Post))
        {
        <center>
            <table cellpadding="9"cellspacing="10">
                <tr>
                    <h1>AddDoctor</h1>

                </tr>
                <tr>
                    <td style="color:blueviolet">First Name:</td>
                    <td>@Html.TextBoxFor(m => m.FirstName)</td>
                    <td> <span asp-validation-for="FirstName" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td style="color:blueviolet">Last Name:</td>
                    <td>@Html.TextBoxFor(m => m.LastName)</td>
                    <td> <span asp-validation-for="LastName" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td style="color:blueviolet">Sex</td>
                    <td>

                        @Html.RadioButtonFor(m => m.Sex, "Male")Male
                        @Html.RadioButtonFor(m => m.Sex, "Female")Female
                        @Html.RadioButtonFor(m => m.Sex, "Others")Others
                    </td>
                    <td> <span asp-validation-for="Sex" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td style="color:blueviolet"> Specialization:</td>
                    <td>

                        <select name="Specialization">
                            <option value="General">General</option>
                            <option value="Internal Medicine">Internal Medicine</option>
                            <option value="Pediatrics">Pediatrics</option>
                            <option value="Orthopedics">Orthopedics</option>
                            <option value="Opthalmology">Opthalmology</option>
                        </select>
                    </td>
                    <td> <span asp-validation-for="Specialization" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td style="color:blueviolet">Visiting_Hours:</td>
                    <td>

                        <select name="Visiting_Hours">
                            <option value="09:00Am to 10:00Am">09:00Am to 10:00Am</option>
                            <option value="10:00Am to 11:00Am">10:00Am to 11:00Am</option>
                            <option value="11:00Am to 12:00Am">11:00Am to 12:00Am</option>

                        </select>
                    </td>
                    <td> <span asp-validation-for="Visiting_Hours" class="text-danger"></span></td>

                </tr>
                <tr>

                    <td><input type="submit" value="Added" /></td>
                    <td><a asp-action="Index">Back to home</a></td>

                </tr>
            </table>
        </center>}
        <div>
            
        </div>
        
</body>

</html>

